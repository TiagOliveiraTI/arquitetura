{
  "autoload": {
    "psr-4": {
      "OTaoDev\\Arquitetura\\": "src/",
      "OTaoDev\\Arquitetura\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:watch": "phpunit-watcher watch",
    "test:coverage": "phpunit tests --coverage-html=.phpunit.cache/_reports\n"
  },
  "authors": [
    {
      "name": "Tiago Oliveira",
      "email": "dev.tiago.oliveira@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "spatie/phpunit-watcher": "^1.23",
    "phpro/grumphp": "^1.12",
    "phpmd/phpmd": "^2.12",
    "phpunit/php-code-coverage": "^9.2"
  },
  "config": {
    "allow-plugins": {
      "phpro/grumphp": true
    }
  }
}
